    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/hello.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "8080"
            },
            "args": [
                "run",
                "--debug",
            ],
            "jinja": true
        }
    ]
}